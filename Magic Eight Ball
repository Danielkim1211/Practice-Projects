import random
name = "Chase"
question = "Will I win tomorrow?"
random_number = random.randint(1, 9)

if random_number == 1:
  elevator = ' Yes - definitely.'
elif random_number == 2:
  elevator = ' it is decidedly so.' 
elif random_number == 3:
  elevator = ' Without a doubt.'
elif random_number == 4:
  elevator = ' Reply hazy, try again'
elif random_number == 5:
  elevator = ' Ask again later.'
elif random_number == 6:
  elevator = ' Better not tell you now.'
elif random_number == 7:
  elevator = ' My sources say no.'
elif random_number == 8:
  elevator = ' Outlook not so good.'
elif random_number == 9:
  elevator = ' Very doubtful.'
else:
  elevator = ' Error'
answer = elevator
if name == '':
  print(question + answer)
else:
  print(name + " asks: " + question + answer)
